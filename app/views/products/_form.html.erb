<% if flash %>
  <ul>
  <% flash.each do |name,msg| %>
    <li class=<%= name %>>  <%= msg %> </li> 
  <% end %>
  </ul>

<% end %>

<% if @product.errors.any? %>
  <div id="errors">
    <h2> <%= pluralize(@product.errors.count, "error") %> failed </h2>
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <%  end %>
    </ul>
  </div>
<% end %>
<%= form_for @product do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.label :picture %><br />
    <%= f.text_field :picture %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>